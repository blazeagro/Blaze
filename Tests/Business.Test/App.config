<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <appSettings>
    <add key="GlobalExceptionHandlerEnabled" value="false" />
  </appSettings>
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.NLog.NLogLoggerFactoryAdapter, Common.Logging.NLog41">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>
  <nlog>
    <variable name="defaultlayout" value="${longdate} ${level} ${logger} ${message} ${exception}" />
    <variable name="rootdir" value="c:\AppLogs\Services\User\Tests" />
    <variable name="rootarchivesdir" value="${rootdir}\Archives" />
    <targets async="true">
      <target name="RollingSizeLogFile" type="File" layout="${defaultlayout}" fileName="${rootdir}\Business.Test.txt" archiveFileName="${rootarchivesdir}\Business.Test.${shortdate}.{##}.txt" archiveAboveSize="10000000" archiveNumbering="Rolling" maxArchiveFiles="50" concurrentWrites="true" keepFileOpen="false" />
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="RollingSizeLogFile" />
    </rules>
  </nlog>
</configuration>